{
  "extends": ["airbnb-base", "eslint:recommended", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "strict": "off",
    "no-useless-catch": "off",
    "prettier/prettier":  [
      "error",
      {
      "endOfLine": "auto",
      "singleQuote": true
      }
    ],
    "no-undef": "off",
    "no-console": "off",
    "no-restricted-syntax": ["ForInStatement", "ForOfStatement"]
  },
  "ignorePatterns": ["node_modules/"],
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "env": {
    "es6": true
  }
}